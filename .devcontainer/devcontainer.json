{
  "name": "Next.js with Bun",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18" // Optional: Install Node.js 18 as fallback for tools
    },
    "ghcr.io/devcontainers-contrib/features/bun:1": {} // Install Bun
  },
  "postCreateCommand": "bun install", // Install dependencies with Bun
  "portsAttributes": {
    "3000": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "oven.bun-vscode", // Bun VS Code extension
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  }
}